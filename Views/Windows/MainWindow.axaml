<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:MangaDownloader.Views"
        xmlns:vm="using:MangaDownloader.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
		x:CompileBindings="True"
        x:Class="MangaDownloader.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
		x:Name="MainWindowWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MangaDownloader"
		WindowStartupLocation="CenterScreen"
		Width="600" Height="500"
		MinWidth="600" MinHeight="400"
		>
	<!--Background="#212529"-->
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<DockPanel>
		<!--メニューバー-->
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Exit" />
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="" />
			</MenuItem>
			<MenuItem Header="View">
				<MenuItem Header="" />
			</MenuItem>
		</Menu>

		<!--ステータスバー-->
		<Border
			DockPanel.Dock="Bottom"
			Padding="10, 0"
			Background="#007acc"
			>
			<Grid
				ColumnDefinitions="Auto,Auto,*"
				Height="25"
				>
				<Label
					Grid.Column="0"
					VerticalAlignment="Center"
					FontSize="12"
					Foreground="WhiteSmoke"
					>
					Download status
				</Label>
				<ProgressBar
					Grid.Column="1"
					Margin="10, 0"
					VerticalAlignment="Center"
				/>
				<Label
					Grid.Column="2"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
					FontSize="12"
					Foreground="WhiteSmoke"
					>
					status
				</Label>
			</Grid>
		</Border>


		<Grid ColumnDefinitions="250,1,*">
			<!--<views:PrepareAreaView Grid.Row="0" DataContext="{Binding PrepareAreaViewModel}" />-->
			<!--<views:DownloadingInfoView Grid.Row="0" />-->
			<views:TaskManageView Grid.Row="0" DataContext="{Binding TaskManageViewModel}" />

			<!--<GridSplitter Grid.Column="1" Margin="0, 5" Background="Black" ResizeDirection="Columns" />-->

			<!--画像表示パネル-->
			<Grid
				RowDefinitions="Auto,*"
				Grid.Column="2"
				Margin="10"
				>
				<Grid
					ColumnDefinitions="Auto,Auto,*"
					Grid.Row="0"
					>
					<Button
						Grid.Column="0"
						>
						<!--Foreground="WhiteSmoke"-->
						<!--Background="#414449"-->
						左
					</Button>
					<Button
						Grid.Column="1"
						Margin="5,0,0,0"
						>
						<!--Foreground="WhiteSmoke"-->
						<!--Background="#414449"-->
						右
					</Button>
					<Label
						Grid.Column="2"
						Margin="10,0,0,0"
						>
						<!--Foreground="WhiteSmoke"-->
						*site name
					</Label>
				</Grid>
				<WrapPanel Grid.Row="1">

				</WrapPanel>
				<!--ここに画像を並べて表示する-->
				<WrapPanel Grid.Row="1">

				</WrapPanel>
			</Grid>

		</Grid>
	</DockPanel>
</Window>
