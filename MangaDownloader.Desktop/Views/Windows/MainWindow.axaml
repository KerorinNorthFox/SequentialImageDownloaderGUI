<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:MangaDownloader.Desktop.Views"
		xmlns:vm="using:MangaDownloader.Desktop.ViewModels"
		mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
		x:CompileBindings="True"
		x:Class="MangaDownloader.Desktop.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		x:Name="MainWindowWindow"
		Icon="/Assets/avalonia-logo.ico"
		Title="MangaDownloader"
		WindowStartupLocation="CenterScreen"
		Width="600" Height="500"
		MinWidth="600" MinHeight="400"
		>
	<!--Background="#212529"-->
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Exit" />
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="" />
			</MenuItem>
			<MenuItem Header="View">
				<MenuItem Header="" />
			</MenuItem>
		</Menu>

		<views:ProgressBarView DockPanel.Dock="Bottom" DataContext="{Binding ProgressBarViewModel}" />

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250" MinWidth="250" />
				<ColumnDefinition Width="5" />
				<ColumnDefinition Width="*" MinWidth="10" />
			</Grid.ColumnDefinitions>

			<views:TaskManageView Grid.Row="0" DataContext="{Binding TaskManageViewModel}" MinWidth="250" />

			<GridSplitter Grid.Column="1" CornerRadius="5" Margin="2" Background="WhiteSmoke" ResizeDirection="Columns" />

			<!-- TODO: 画像表示パネルとプロパティパネルを有すEditPanelを実装 -->
			<Grid Grid.Column="2"
				  Margin="10">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Button
					Grid.Column="0"
					>
						<!--Foreground="WhiteSmoke"-->
						<!--Background="#414449"-->
						左
					</Button>
					<Button
					Grid.Column="1"
					Margin="5,0,0,0"
					>
						<!--Foreground="WhiteSmoke"-->
						<!--Background="#414449"-->
						右
					</Button>
					<Label
					Grid.Column="2"
					Margin="10,0,0,0"
					>
						<!--Foreground="WhiteSmoke"-->
						*site name
					</Label>
				</Grid>
				<WrapPanel Grid.Row="1">

				</WrapPanel>
				<!--ここに画像を並べて表示する-->
				<WrapPanel Grid.Row="1">

				</WrapPanel>
			</Grid>

		</Grid>
	</DockPanel>
</Window>
