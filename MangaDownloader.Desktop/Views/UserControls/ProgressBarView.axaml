<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MangaDownloader.Desktop.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="25"
			 x:Class="MangaDownloader.Desktop.Views.ProgressBarView"
			 x:DataType="vm:ProgressBarViewModel"
			 >
	<Border Padding="10, 0" Background="#007acc">
		<StackPanel Orientation="Horizontal">
			<Label FontSize="12" Content="Manga DL status" Foreground="WhiteSmoke"/>
			<ProgressBar Foreground="Orange" Maximum="{Binding MangaDownloadProgress.Maximum}" Value="{Binding MangaDownloadProgress.Current}" Margin="10, 0" />
			<StackPanel Orientation="Horizontal">
				<Label Content="{Binding MangaDownloadProgress.Current}" Foreground="WhiteSmoke"/>
				<Label Content="/" Foreground="WhiteSmoke"/>
				<Label Content="{Binding MangaDownloadProgress.Maximum}" Foreground="WhiteSmoke"/>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>
